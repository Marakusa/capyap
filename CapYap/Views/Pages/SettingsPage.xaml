<Page
    x:Class="CapYap.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:CapYap.Helpers"
    xmlns:local="clr-namespace:CapYap.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel>
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="General Settings" />
        <ui:ToggleSwitch x:Name="AutoStartToggle"
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ChangeAutoStartCommand, Mode=OneWay}"
            CommandParameter="{Binding IsChecked,RelativeSource={RelativeSource Self}}"
            Content="Open CapYap on startup"
            IsChecked="{Binding ViewModel.AutoStart, Mode=OneWay}" />
        <ui:ToggleSwitch x:Name="ShowRecentFilesDashboardToggle"
            Margin="0,12,0,0"
            Content="Show Recent Files on Dashboard"/>

        <TextBlock Margin="0,12,0,0" Text="Theme" />
        <RadioButton
            Margin="0,6,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_light"
            Content="Light"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
        <RadioButton
            Margin="0,8,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_dark"
            Content="Dark"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Upload Settings" Margin="0,32,0,0" />
        <TextBlock Margin="0,12,0,0" Text="Upload File Format" />
        <ComboBox 
            x:Name="FormatComboBox" 
            Margin="0,6,0,0"
            Width="100" 
            HorizontalAlignment="Left" 
            SelectedIndex="0">
            <ComboBoxItem Content="JPG"/>
            <ComboBoxItem Content="PNG"/>
            <ComboBoxItem Content="GIF"/>
        </ComboBox>
        <TextBlock x:Name="CompressionQualityLabel" Margin="0,12,0,0" Text="Compression Quality" />
        <Grid HorizontalAlignment="Left" Width="275" VerticalAlignment="Top" Margin="0,0,0,-32">
            <Slider x:Name="CompressionQualitySlider" 
                Margin="0,8,0,35"
                Width="200" 
                HorizontalAlignment="Left" Maximum="92" Minimum="1" Value="92" SmallChange="5" />
            <ui:NumberBox x:Name="CompressionQualityNumber" 
                          Width="64" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Right" 
                          Text="92" 
                          MaxDecimalPlaces="0" 
                          LargeChange="5" 
                          Value="92" 
                          SmallChange="5" 
                          SpinButtonPlacementMode="Compact" 
                          Maximum="92" 
                          Minimum="1" >
                <ui:NumberBox.NumberFormatter>
                    <ui:ValidateNumberFormatter/>
                </ui:NumberBox.NumberFormatter>
            </ui:NumberBox>
        </Grid>
        <TextBlock x:Name="CompressionLevelLabel" Margin="0,12,0,0" Text="Compression Level" />
        <Grid HorizontalAlignment="Left" Width="275" VerticalAlignment="Top" Margin="0,0,0,-32">
            <Slider x:Name="CompressionLevelSlider" 
                Margin="0,8,0,35"
                Width="200" 
                HorizontalAlignment="Left" Maximum="9" Value="8" SmallChange="1" />
            <ui:NumberBox x:Name="CompressionLevelNumber" 
                          Width="64" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Right" 
                          Text="8" 
                          MaxDecimalPlaces="0" 
                          LargeChange="2" 
                          Value="8" 
                          SmallChange="1" 
                          SpinButtonPlacementMode="Compact" 
                          Maximum="9" 
                          Minimum="0" >
                <ui:NumberBox.NumberFormatter>
                    <ui:ValidateNumberFormatter/>
                </ui:NumberBox.NumberFormatter>
            </ui:NumberBox>
        </Grid>
        
        <TextBlock
            FontSize="16"
            FontWeight="Medium"
            Text="GIF Format Settings" Margin="0,32,0,0" />
        <TextBlock Margin="0,12,0,0" Text="Compression Quality" />
        <Grid HorizontalAlignment="Left" Width="275" VerticalAlignment="Top" Margin="0,0,0,-32">
            <Slider x:Name="AnimCompressionQualitySlider" 
                Margin="0,8,0,35"
                Width="200" 
                HorizontalAlignment="Left" Maximum="70" Minimum="1" Value="70" SmallChange="5" />
            <ui:NumberBox x:Name="AnimCompressionQualityNumber" 
                          Width="64" 
                          VerticalAlignment="Top" 
                          HorizontalAlignment="Right" 
                          Text="70" 
                          MaxDecimalPlaces="0" 
                          LargeChange="5" 
                          Value="70" 
                          SmallChange="5" 
                          SpinButtonPlacementMode="Compact" 
                          Maximum="70" 
                          Minimum="1" >
                <ui:NumberBox.NumberFormatter>
                    <ui:ValidateNumberFormatter/>
                </ui:NumberBox.NumberFormatter>
            </ui:NumberBox>
        </Grid>

        <TextBlock
            Margin="0,32,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About CapYap" />
        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />

        <ui:Button x:Name="QuitButton" Margin="0,32,0,64">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE8BB;" 
                           FontFamily="Segoe Fluent Icons"
                           FontSize="16"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <TextBlock Text="Quit CapYap" VerticalAlignment="Center"/>
            </StackPanel>
        </ui:Button>
    </StackPanel>
</Page>
