<Page 
    x:Class="CapYap.Views.Pages.UploadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapYap.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="UploadPage"
    d:DataContext="{d:DesignInstance local:UploadPage,
                                    IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="171.81" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" Margin="0,16,0,0" VerticalAlignment="Top">
            <ui:Button x:Name="UploadButton"
                Click="Button_Click"
                Content="Upload a screenshot" HorizontalAlignment="Center" />
            <ui:TextBlock x:Name="UploadSuccess" TextWrapping="Wrap" Text="Screenshot uploaded!" VerticalAlignment="Center" Margin="0,8,0,0" HorizontalAlignment="Center"/>
            <ui:TextBlock x:Name="UploadFail" Foreground="IndianRed" TextWrapping="Wrap" Text="Screenshot upload failed." VerticalAlignment="Center" Margin="0,8,0,0" HorizontalAlignment="Center"/>
            <WrapPanel x:Name="UploadingStatus" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <ui:ProgressRing IsIndeterminate="True" Height="32" Width="32" Foreground="#5E5EFF"/>
                <ui:TextBlock TextWrapping="Wrap" Text="Uploading..." VerticalAlignment="Center" Margin="10,0,0,0"/>
            </WrapPanel>
        </StackPanel>
        <ui:Image x:Name="UploadedImage" Source="/Assets/icons/1024x1024.png" Margin="16,84,16,16" VerticalAlignment="Top" Height="350"/>
    </Grid>
</Page>
