<Page
    x:Class="CapYap.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapYap.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="150,0,150,150" MaxWidth="400">
            <TextBlock
                Grid.Column="1"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextAlignment="Center"
                Text="Now press" FontSize="24"
                />
            <WrapPanel Grid.Row="1" Height="32" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Center">
                <ui:Button Content="Ctrl" Focusable="False" IsTabStop="False" HorizontalAlignment="Center"/>
                <ui:TextBlock TextWrapping="Wrap" Text="+" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                <ui:Button Content="Print Screen" Focusable="False" IsTabStop="False" HorizontalAlignment="Center"/>
            </WrapPanel>
            <TextBlock
                Grid.Column="1"
                Margin="0,10,10,0"
                TextWrapping="Wrap"
                TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Text="to take a screenshot. It will be uploaded to your gallery, and a link will be copied to your clipboard." Opacity="0.50" 
                />
        </StackPanel>
        <UniformGrid Columns="4" VerticalAlignment="Bottom" Margin="5,0,5,5" MaxWidth="780">

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="100" Padding="16,5,16,6">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Disk used" FontSize="16" Margin="0,0,0,0" TextAlignment="Left" Width="10000"/>
                        <ProgressBar x:Name="DiskUsedLoading" IsIndeterminate="True" Foreground="#5E5EFF"/>
                        <TextBlock x:Name="DiskUsed" Text="0 KB" FontSize="32" Margin="0,4,0,0" Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="100" Padding="16,5,16,6">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Total views" FontSize="16" Margin="0,0,0,0" TextAlignment="Left" Width="10000"/>
                        <ProgressBar x:Name="TotalViewsLoading" IsIndeterminate="True" Foreground="#5E5EFF"/>
                        <TextBlock x:Name="TotalViews" Text="0" FontSize="32" Margin="0,4,0,0" Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="100" Padding="16,5,16,6">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Files (All time)" FontSize="16" Margin="0,0,0,0" TextAlignment="Left" Width="10000"/>
                        <ProgressBar x:Name="FilesLoading" IsIndeterminate="True" Foreground="#5E5EFF"/>
                        <TextBlock x:Name="Files" Text="0" FontSize="32" Margin="0,4,0,0" Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="100" Padding="16,5,16,6">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Files (7 days)" FontSize="16" Margin="0,0,0,0" TextAlignment="Left" Width="10000"/>
                        <ProgressBar x:Name="Files7DaysLoading" IsIndeterminate="True" Foreground="#5E5EFF"/>
                        <TextBlock x:Name="Files7Days" Text="0" FontSize="32" Margin="0,4,0,0" Opacity="0.5"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

        </UniformGrid>
    </Grid>
</Page>
