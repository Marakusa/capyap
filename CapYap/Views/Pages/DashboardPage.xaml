<Page
    x:Class="CapYap.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CapYap.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="140" Margin="200,0,200,50" MaxWidth="400">
            <Grid.ColumnDefinitions HorizontalAlignment="Stretch">
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="1"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                TextAlignment="Center"
                Text="Now press" FontSize="24"
                />
            <TextBlock
                Grid.Column="1"
                Margin="0,88,10,0"
                Width="400"
                TextWrapping="Wrap"
                TextAlignment="Center"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Text="to take a screenshot. It will be uploaded to your gallery, and a link will be copied to your clipboard." Opacity="0.50" 
                />
            <Grid Grid.Column="1" Height="32" VerticalAlignment="Top" Width="164" Margin="117,45,129,0">
                <ui:Button Content="Ctrl" Focusable="False" IsTabStop="False"/>
                <ui:Button Content="Print Screen" Margin="66,0,0,0" Focusable="False" IsTabStop="False"/>
                <ui:TextBlock HorizontalAlignment="Left" Margin="51,0,0,0" TextWrapping="Wrap" Text="+" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <UniformGrid Columns="4" VerticalAlignment="Bottom" Margin="5,0,5,5" MaxWidth="780">

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="80">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Storage Usage (Gb)" FontSize="16" Margin="8,8,0,0"/>
                        <TextBlock Text="0" Foreground="#AAA" FontSize="12" Margin="8,4,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="80">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Uploaded files" FontSize="16" Margin="0,8,0,0" VerticalAlignment="Top"/>
                        <TextBlock Text="0" Foreground="#AAA" FontSize="12" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="80">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Views (7 days)" FontSize="16" Margin="0,8,0,0" VerticalAlignment="Top"/>
                        <TextBlock Text="0" Foreground="#AAA" FontSize="12" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

            <ui:Button HorizontalAlignment="Stretch" Margin="5" Height="80">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock Text="Views (All time)" FontSize="16" Margin="0,8,0,0" VerticalAlignment="Top"/>
                        <TextBlock Text="0" Foreground="#AAA" FontSize="12" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </ui:Button>

        </UniformGrid>
    </Grid>
</Page>
