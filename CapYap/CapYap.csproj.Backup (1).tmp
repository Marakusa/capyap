<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Assets\icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LoadingSpinner.WPF" Version="1.0.0" />
    <PackageReference Include="WPF-UI" Version="4.0.2" />
    <PackageReference Include="WPF-UI.DependencyInjection" Version="4.0.2" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.1" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0 " />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\icon.ico" />
    <None Remove="Assets\icon.png" />
    <None Remove="Assets\icon.svg" />
    <None Remove="Assets\icons\1024x1024.png" />
    <None Remove="Assets\icons\128x128.png" />
    <None Remove="Assets\icons\16x16.png" />
    <None Remove="Assets\icons\24x24.png" />
    <None Remove="Assets\icons\256x256.png" />
    <None Remove="Assets\icons\32x32.png" />
    <None Remove="Assets\icons\48x48.png" />
    <None Remove="Assets\icons\512x512.png" />
    <None Remove="Assets\icons\64x64.png" />
    <None Remove="Assets\icons\96x96.png" />
    <None Remove="Assets\icon_capyap.svg" />
    <None Remove="Assets\loader.png" />
    <None Remove="Assets\wpfui-icon-256.png" />
    <None Remove="Assets\wpfui-icon-1024.png" />
    <None Remove="Views\Windows\icon.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CapYap.API\CapYap.API.csproj" />
    <ProjectReference Include="..\CapYap.HotKeys\CapYap.HotKeys.Windows.csproj" />
    <ProjectReference Include="..\CapYap.ScreenCapture\CapYap.ScreenCapture.Windows.csproj" />
    <ProjectReference Include="..\CapYap.Toast\CapYap.Toast.csproj" />
    <ProjectReference Include="..\CapYap.Utils\CapYap.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
	<Resource Include="Assets\icon.ico" />
	<Resource Include="Assets\icon.png" />
	<Resource Include="Assets\icon.svg" />
	<Resource Include="Assets\icons\1024x1024.png" />
	<Resource Include="Assets\icons\128x128.png" />
	<Resource Include="Assets\icons\16x16.png" />
	<Resource Include="Assets\icons\24x24.png" />
	<Resource Include="Assets\icons\256x256.png" />
	<Resource Include="Assets\icons\32x32.png" />
	<Resource Include="Assets\icons\48x48.png" />
	<Resource Include="Assets\icons\512x512.png" />
	<Resource Include="Assets\icons\64x64.png" />
	<Resource Include="Assets\icons\96x96.png" />
	<Resource Include="Assets\icon_capyap.svg" />
	<Resource Include="Assets\loader.png" />
    <Resource Include="Assets\wpfui-icon-256.png" />
    <Resource Include="Assets\wpfui-icon-1024.png" />
    <Resource Include="Views\Windows\icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\WindowSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>WindowSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="NSIS\Installer.nsi">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="Properties\WindowSettings.settings">
      <Generator>PublicSettingsSingleFileGenerator</Generator>
      <LastGenOutput>WindowSettings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="call &quot;$(ProjectDir)post_build.bat&quot; &quot;$(ProjectDir)Assets\icon.ico&quot; &quot;$(ProjectDir)$(OutDir)publish&quot; &quot;$(ProjectDir)NSIS\Installer.nsi&quot;" />
  </Target>

</Project>
